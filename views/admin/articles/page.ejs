<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homenavbar.ejs'); %>

<div class="container">
<hr>
<% result.articles.rows.forEach(function(temp){%>
    <hr>
    <div class="card">
        <div class="card-header">
            <h4><%= temp.title %></h4>
        </div>
        <div class="card-body">
            <a class="btn btn-info" href="/<%= temp.slug %>">Ler artigo</a>
        </div>
    </div>
 <% }) %>
    <br>
        <div class="row">
            <div class="col">
                <% if (result.page > 2) { %>
                    <a style="float: left" href="/articles/page/<%=result.page - 1  %>"><< Prev </a>
                <% } else {  %>
                    <a style="float: left" href="/articles/"><< Prev </a>
                <% } %>

                <% if (result.next == true) { %>
                  <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Next >> </a>
                <% }  %>
            </div>
        </div>
        <hr><br>
</div>

